<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/confirmationDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:text="Confrim Service Selection"
        android:textAlignment="center"
        android:textColor="@color/rose_well_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/selectingMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Jones"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmationDialogTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/confirmationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to add the following Transaction"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/selectingMemberName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/selectedService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEL"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/confirmationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/selectedServicePrice"/>
    <TextView
        android:id="@+id/selectedServicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ksh 300"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/confirmationText"
        app:layout_constraintStart_toEndOf="@+id/selectedService"
        app:layout_constraintEnd_toStartOf="@+id/selectedPaymentMethod"/>

    <TextView
        android:id="@+id/selectedPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MPESA"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/confirmationText"
        app:layout_constraintStart_toEndOf="@+id/selectedServicePrice"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/cancel_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedService"
        app:layout_constraintEnd_toStartOf="@+id/confirm_transaction"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/confirm_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@+id/selectedServicePrice"
        app:layout_constraintStart_toEndOf="@+id/cancel_confirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>