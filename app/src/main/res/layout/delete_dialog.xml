<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/deleteDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:text="Confrim Transaction Delete"
        android:textAlignment="center"
        android:textColor="@color/rose_well_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/deletionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to DELETE the following Transaction"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/deleteDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/deleteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEL"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/deletionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deletePrice"/>
    <TextView
        android:id="@+id/deletePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ksh 300"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/deletionText"
        app:layout_constraintStart_toEndOf="@+id/deleteService"
        app:layout_constraintEnd_toStartOf="@+id/deletePaymentMethod"/>

    <TextView
        android:id="@+id/deletePaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MPESA"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/deletionText"
        app:layout_constraintStart_toEndOf="@+id/deletePrice"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/cancel_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteService"
        app:layout_constraintEnd_toStartOf="@+id/confirm_delete"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/confirm_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@+id/deletePaymentMethod"
        app:layout_constraintStart_toEndOf="@+id/cancel_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>