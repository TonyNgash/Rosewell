<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp">



    <TextView
        android:id="@+id/transactionName"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="match_parent"
        android:text="Dreadlocs"
        android:textSize="21sp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/transactionPrice"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:text="Kshs.200"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/transactionName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/paymentMethod"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        android:text="M-Pesa"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/transactionPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/transactionTime"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/transactionTime"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        android:text="5:00PM"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/paymentMethod"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>