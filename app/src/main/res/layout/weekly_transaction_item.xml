<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/transactionDate"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Friday, 09 December 2022"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/transactionName"
        app:layout_constraintBottom_toTopOf="@+id/transactionTime"/>
    <TextView
        android:id="@+id/transactionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:23:10"
        android:layout_marginStart="10dp"
        android:textStyle="italic"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/transactionDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/transactionName"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="match_parent"
        android:textSize="21sp"
        android:text="Gel"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/transactionDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/transactionPrice"/>
    <TextView
        android:id="@+id/transactionPrice"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.15"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:text="Kshs.200"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/transactionName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/paymentMethod"/>

    <TextView
        android:id="@+id/paymentMethod"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.15"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="M-Pesa"
        app:layout_constraintStart_toEndOf="@+id/transactionPrice"
        app:layout_constraintEnd_toStartOf="@+id/deleteTransactionBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/deleteTransactionBtn"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        app:tint="@color/card_02_bg"
        app:layout_constraintStart_toEndOf="@+id/paymentMethod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>