<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/public_facing_bg"
    tools:context=".ui.admin.fragments.MemberWeeklyFragment">


    <TextView
        android:id="@+id/weeklyViewMemberName"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="Weekly Transactions BY:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_all_transactions_btn"/>
    <TextView
        android:id="@+id/weeklyTotals"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="Totals:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklyViewMemberName"
        app:layout_constraintEnd_toStartOf="@+id/show_all_transactions_btn"/>

    <Button
        android:id="@+id/show_all_transactions_btn"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:text="Show ALL"
        android:theme="@style/btns"
        android:background="@color/card_04_bg"
        app:layout_constraintStart_toEndOf="@id/weeklyViewMemberName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weeklyRecyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weeklyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        tools:listitem="@layout/single_transaction_item"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/weeklyTotals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>